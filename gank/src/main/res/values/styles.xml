<resources>

    <!-- Base application theme. -->
    <style name="MD_Gank_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightseagreen</item>
        <item name="colorPrimaryDark">@color/dodgerblue</item>
        <item name="colorAccent">@color/indianred</item>
    </style>

    <style name="MD_Gank_AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MD_Gank_AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MD_Gank_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
