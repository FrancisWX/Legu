<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/md_gank_radius_card_view"
        app:cardElevation="3dp"
        android:foreground="?attr/selectableItemBackground">

    <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmer_layout_item_welfare_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_photo_layout_item_welfare_fragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_gank_height_image_welfare"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

    </io.supercharge.shimmerlayout.ShimmerLayout>


</androidx.cardview.widget.CardView>